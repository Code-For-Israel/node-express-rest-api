{
  "name": "haverim-lerefua",
  "version": "1.0.0",
  "description": "Haverim Lerefua Backend",
  "author": "Code4Israel",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "start:dev": "nodemon",
    "start:dev:migrate": "npm run migrations:run && npm run start:dev",
    "start:dist": "node dist/src/index",
    "start:dist:migrate": "npm run migrations:run && node dist/src/index",
    "migrations:generate": "prisma migrate dev --name",
    "migrations:run": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-list-endpoints": "^6.0.0",
    "helmet": "^6.0.0",
    "http-status-codes": "^2.2.0",
    "serverless-http": "^2.6.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-list-endpoints": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/node": "^18.7.16",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.3.1",
    "serverless-plugin-typescript": "^2.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "prettier": {
    "printWidth": 150,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  }
}
